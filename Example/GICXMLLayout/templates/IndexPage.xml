<!--page 相当于 UIViewController-->
<page title="首页" data-context="IndexPageViewModel">
    <!--list 相当于UITableView-->
    <list separator-inset = "0 15 0 15">
        <for data-model="listDatas">
            <list-item selection-style="2" event-item-select="onSelect:">
                <panel margin="15" background-color="white">
                    <lable text="{{ name }}"></lable>
                </panel>
            </list-item>
        </for>
    </list>
</page>

