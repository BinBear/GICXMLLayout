<page title="支持的UI元素" data-context="UIListPageViewModel">
    <templates>
        <template t-name="title">
            <lable text="{{ }}" space-after="10" font-size="25" font-color="blue"/>
        </template>

        <template t-name="desc">
            <lable text="{{ }}" space-after="10" space-before="10" font-size="16" font-color="565656"/>
        </template>
    </templates>
    <scroll-view background-color="white">
        <inset-panel inset="15">
            <stack-panel>
                <template-ref t-name="desc" data-context="设置背景色"/>
                <!--设置背景色-->
                <view height="20" background-color="yellow">
                </view>

                <template-ref t-name="desc" data-context="设置渐变色"/>
                <!--设置背景色-->
                <view height="20">
                    <gradient-background colors="red 0 yellow 0.5 blue 1"></gradient-background>
                </view>
            </stack-panel>
        </inset-panel>
    </scroll-view>
</page>
