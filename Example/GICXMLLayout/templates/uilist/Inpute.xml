
<page title="input" data-context="InputViewModel">
    <templates>
        <template t-name="desc">
            <lable text="{{ }}" space-after="10" space-before="10" font-size="16" font-color="565656"/>
        </template>
    </templates>
    <scroll-view background-color="white">
        <inset-panel inset="64 15 15 15">
            <stack-panel>
                <template-ref t-name="desc" data-context="输入框"/>
                <!--设置背景色-->
                <view height="20" background-color="yellow">
                </view>
            </stack-panel>
        </inset-panel>
    </scroll-view>
</page>
