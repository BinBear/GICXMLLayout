
<page title="input" data-context="InputViewModel">
    <templates>
        <template t-name="desc">
            <lable text="{{ }}" space-after="10" space-before="10" font-size="16" font-color="565656"/>
        </template>
    </templates>
    <scroll-view background-color="white">
        <inset-panel inset="64 15 15 15">
            <stack-panel>
                <template-ref t-name="desc" data-context="input"/>
                <!--设置背景色-->
                <input font-color="yellow" font-size="16" border-color="black" border-width="0.5" text="{{ exp=name,mode=2}}" placehold="请输入用户名" placehold-color="red" placehold-size="16" height="31">
                </input>
                <template-ref t-name="desc" data-context="双向绑定的显示"/>
                <lable text="{{ exp=name,mode=1}}"/>
                
                
                <template-ref t-name="desc" data-context="input-view"/>
                <input-view font-color="yellow" font-size="16" border-color="black" border-width="0.5" text="你是input-view，你是input-view，你是input-view，你是input-view，你是input-view，你是input-view，你是input-view，你是input-view，你是input-view，" placehold="请输入用户名" height="100">
                </input-view>
            </stack-panel>
        </inset-panel>
    </scroll-view>
</page>
